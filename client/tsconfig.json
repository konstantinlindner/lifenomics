{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		// shadcn custom
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@/auth": ["./src/auth"],
			"@/clients": ["./src/clients"],
			"@/components": ["./src/components"],
			"@/components/*": ["./src/components/*"],
			"@/contexts": ["./src/contexts"],
			"@/fetch": ["./src/fetch"],
			"@/helpers": ["./src/helpers"],
			"@/hooks": ["./src/hooks"],
			"@/routes": ["./src/routes"],
			"@/styles/*": ["./src/styles/*"],
			"@/server/*": ["../server/src/*"]
		},
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		},
		{
			"path": "../server"
		}
	]
}
