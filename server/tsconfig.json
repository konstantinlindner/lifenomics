{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"emitDeclarationOnly": true,
		"composite": true,
		"rootDir": ".",
		"types": ["node"],
		"paths": {
			"~/*": ["./src/*"],
			"~/routers": ["./src/trpc/routers"],
			"@prisma/client": ["./prisma/generated"]
		}
	},
	"include": ["src/**/*.ts", "prisma.config.ts", "src/seed.ts"],
	"exclude": ["node_modules", "dist"]
}
